{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],

    "module": "ESNext",
    "moduleResolution": "node",

    "rootDir": "./Server",
    "outDir": "./Server/dist",

    "types": ["node"],
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["Server/**/*.ts"],
  "exclude": ["node_modules", "Server/dist", "vite.config.ts"]
}
